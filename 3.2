#include<stdio.h>
#define max 50
int nhapsonguyen(){
	int n;
	do{
		printf("nhap phan tu n: ");
		scanf("%d",&n);
	}while(n<0 || n>max);
return n;	
}

int nhapmang(int a[], int n){
	for(int i=0; i<n ; i++)
	{
		printf("nhap phan tu a[%d]: ", i);
		scanf("%d", &a[i]);
		if(a[i]==0)
			return 0;
	}
}

int xuatmang(int a[], int n){
	for(int i=0; i<n; i++)
		printf("%4d", a[i]);
}

int sapxepgiamdan(int a[], int n){
	int tam;
    for(int i=0;i<n;i++)
        for(int j=0;j<=i;j++)
			{
	            if(a[j]<a[i])
					{
		                tam=a[i];
		                a[i]=a[j];
		                a[j]=tam;
		            }
			}
}

int main(){
	int n;
	int a[max];
	n = nhapsonguyen() ;
	nhapmang(a,n);
	printf("\n mang sau khi nhap la:\n");
	xuatmang(a, n);
	
	sapxepgiamdan(a,n);
	printf("\n mang sau khi sap xep giam dan la: \n");
	xuatmang(a,n);
}
